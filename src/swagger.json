    "paths": {
        "/youtube": {
            "post": {
                "summary": "Download audio or video from youtube",
                "description": "Listagem de colaboradores",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "link": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "link": "https://youtu.be/qU9mHegkTc4",
                                    "type": "audio"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Download realized"
                    },
                    "500": {
                        "description": "problem on download"
                    }
                }
            }
        }
    }
}